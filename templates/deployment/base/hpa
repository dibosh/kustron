apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: hpa
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: deployment
  minReplicas: {{app.minreplicas}}
  maxReplicas: {{app.maxreplicas}}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: {{app.cputhreshold}}
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: {{app.memthreshold}}
